<mapper namespace="com.oracle.ohTravel.Hotel">

	<select id="hotelList" resultType="Hotel">
		SELECT * FROM hotel 
	</select>
	
	<select id="hotelDetail" resultType="Hotel">
		SELECT * FROM hotel
		WHERE hotel_id = #{hotel_id}
	</select>
	
